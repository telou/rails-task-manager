<div class="container">
  <div class="row justify-content-center">
    <h1>My tasks</h1>
  </div>
  <div>
    <div class="col-12">
      <% @tasks.each do |task| %>
      <ul>
        <% if task.completed == true %>
        <p> <i class="far fa-check-circle tick"></i> </p>
        <% else  %>
        <p> <i class="far fa-circle untick"></i> </p>
        <% end %>
        <li><%= link_to task.title, task_path(task) %></li>
      </ul>
      <% end %>
    </div>
  </div>


  <div class="row">
    <%= link_to "Add a task", new_path %>
  </div>
</div>



